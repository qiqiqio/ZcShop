<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:listDivider">@drawable/md_divider</item>
    </style>

    <style name="fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="loginTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>


    <style name="bigconfrimButton">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="bigConfirmButton" parent="@style/bigconfrimButton">
        <item name="android:background">@drawable/bg_btn_style_red</item>
    </style>


    <style name="smallButton">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_color_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="smallRedButton" parent="@style/smallButton">
        <item name="android:background">@drawable/bg_btn_style_red_small</item>
    </style>

    <style name="midButton">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_color_selector</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="midRedButton" parent="@style/midButton">
        <item name="android:background">@drawable/bg_btn_style_red_small</item>
    </style>

    <style name="meSmallButton">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_color_selector</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">28dp</item>
    </style>
    <style name="meSmallRedButton" parent="@style/meSmallButton">
        <item name="android:background">@drawable/me_btn_style_green_small</item>
    </style>
    <style name="meSmallRedButton2" parent="@style/meSmallButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:background">@drawable/me_btn_style_yellow_small</item>
    </style>
    <style name="meSmallRedButton3" parent="@style/meSmallButton">
        <item name="android:background">@drawable/me_btn_style_red_small</item>
    </style>

    <style name="dialog_style" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/transparent</item><!-- 设置dialog的背景 -->
        <item name="android:windowFrame">@null</item><!-- 设置Dialog的windowFrame框为无 -->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item><!-- 是否半透明 -->
        <item name="android:windowContentOverlay">@null</item><!-- 设置窗口内容不覆盖 -->
        <item name="android:windowAnimationStyle">@style/dialog_anim</item><!-- 弹出和关闭动画 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 背景是否模糊显示 -->
    </style>

    <style name="dialog_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
</resources>
